<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
<comment>App properties</comment>
<entry key="databaseVersion">6</entry>
<entry key="appVersion">1.1.6</entry>
<entry key="useSubFolder">sqlite</entry>
<entry key="title">Beige Accounting</entry>
<entry key="jdbcDriverClass">org.sqlite.JDBC</entry>
<entry key="dataSourceClassName">org.sqlite.SQLiteDataSource</entry>
<entry key="databaseName">#currentParentDir#beigeaccounting.sqlite</entry>
<entry key="databaseUrl">jdbc:sqlite:#currentParentDir#beigeaccounting.sqlite</entry>
<entry key="checkTableExist">select * from SQLITE_MASTER where TBL_NAME=':tableName';</entry>
<entry key="initRdbms">init-sqlite.sql</entry>
</properties>
