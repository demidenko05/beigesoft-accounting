<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
<comment>App properties</comment>
<entry key="title">Beige Accounting</entry>
<entry key="appVersion">1.1.6</entry>
<entry key="databaseVersion">6</entry>
<entry key="useSubFolder">mysql</entry>
<entry key="jdbcDriverClass">com.mysql.jdbc.Driver</entry>
<entry key="dataSourceClassName">com.mysql.jdbc.jdbc2.optional.MysqlDataSource</entry>
<entry key="databaseName">beigeaccounting</entry>
<entry key="userName">beigeaccounting</entry>
<entry key="userPassword">beigeaccounting</entry>
<entry key="databaseUrl">jdbc:mysql://localhost/beigeaccounting</entry>
<entry key="checkTableExist">select * from INFORMATION_SCHEMA.TABLES where TABLE_SCHEMA='beigeaccounting' and TABLE_NAME=':tableName';</entry>
</properties>
